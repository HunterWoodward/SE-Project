<head>
<link rel='stylesheet' href='welcome.scss'>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<style>
</style>
</head>

<div class ="row">
  <div class="col-lg-4"></div>
  <div class= "col-lg-3 bg-dark shadow-lg border m-5 rounded text-light text-center ">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field m-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
 <div class="field m-2">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>
 <div class="field m-2">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>
<div class="field m-2">
  <%=f.label "Profile Picture"%>
  <%=f.file_field :avatar, autofocus: true,class:"m-2 btn btn-light" %><br />
  </div>
  <%if @user.avatar.attached?%>
  <%= image_tag url_for((@user.avatar)), height: 300%>   
  <%else%>
  <%=image_tag "placeholder.jpg",height: 300%>
 <%end%>
    <div class="field m-2">
    <%= f.label "about" %><br />
    <%= f.text_area :bio, autofocus: true %>
    </div>
  <div class="field m-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field m-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class:"m-2 btn btn-light"%>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
</div>
